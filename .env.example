# KiraPay Payment Gateway Configuration
# Get your API key from: https://app.kira-pay.com

# Your KiraPay API Key (required - CHANGE THIS)
KIRAPAY_API_KEY=your_kirapay_api_key_here

# KiraPay API Base URL (no need to change)
KIRAPAY_API_URL=https://api.kira-pay.com/api

# Redirect URL after successful payment (change domain for production)
NEXT_PUBLIC_PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success

# Webhook secret for verifying KiraPay webhook signatures (required for production)
# Set this in KiraPay dashboard when configuring webhooks
KIRAPAY_WEBHOOK_SECRET=your_webhook_secret_here
